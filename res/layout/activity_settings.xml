<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boyi.shortmessage.MainActivity" >

    <include
        android:id="@+id/titlebar"
        layout="@layout/titlebar" />

    <RelativeLayout
        android:id="@+id/account_dev"
        android:background="@drawable/background_classify_item"
        android:layout_below="@id/titlebar"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_height="50dip" >
        <TextView
            android:id="@+id/account_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text"
            android:text="@string/account" />
        <TextView
            android:id="@+id/account_right"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/account_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="5dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_size_dev"
        android:background="@drawable/background_classify_item"
        android:layout_below="@id/account_dev"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_height="50dip" >
        <TextView
            android:id="@+id/text_size_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text"
            android:text="@string/text_size" />
        <Button
            android:id="@+id/large"
            android:gravity="center"
            android:background="@drawable/btn_large_bg"
            android:layout_alignParentRight="true"
            android:layout_width="75dip"
            android:layout_height="50dip"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"
            android:layout_marginRight="5dip" />
        <Button
            android:id="@+id/medium"
            android:gravity="center"
            android:background="@drawable/btn_medium_bg"
            android:layout_toLeftOf="@id/large"
            android:layout_width="75dip"
            android:layout_height="50dip"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip" />
        <Button
            android:id="@+id/small"
            android:gravity="center"
            android:background="@drawable/btn_small_bg"
            android:layout_toLeftOf="@id/medium"
            android:layout_width="75dip"
            android:layout_height="50dip"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_cache_dev"
        android:background="@drawable/background_classify_item"
        android:layout_below="@id/text_size_dev"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_height="50dip" >
        <TextView
            android:id="@+id/clear_cache_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text"
            android:text="@string/clear_cache" />
        <TextView
            android:id="@+id/clear_cache_right"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="5dip"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/display_day_dev"
        android:background="@drawable/background_classify_item"
        android:layout_below="@id/clear_cache_dev"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_height="50dip" >
        <TextView
            android:id="@+id/display_day_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text"
            android:text="@string/display_day" />
        <TextView
            android:id="@+id/display_day_right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="15dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text"
            android:text="@string/one_week" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us_dev"
        android:background="@drawable/background_classify_item"
        android:layout_below="@id/display_day_dev"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_height="50dip" >
        <TextView
            android:id="@+id/about_us_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text"
            android:text="@string/about_boyi" />
        <TextView
            android:id="@+id/about_us_right"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="5dip"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedback_dev"
        android:background="@drawable/background_classify_item"
        android:layout_below="@id/about_us_dev"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_height="50dip" >
        <TextView
            android:id="@+id/feedback_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text"
            android:text="@string/feedback" />
        <TextView
            android:id="@+id/feedback_right"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="5dip"
            android:textSize="20sp"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_update_dev"
        android:background="@drawable/background_classify_item"
        android:layout_below="@id/feedback_dev"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_height="50dip" >
        <TextView
            android:id="@+id/check_update_left"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="5dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text"
            android:text="@string/check_update" />
        <TextView
            android:id="@+id/check_update_right"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical|left"
            android:paddingRight="15dip"
            android:textSize="20sp"
            android:textColor="@color/gray_text" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_dev"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/bottom_img"
            android:padding="5dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/icon_phone" />
        <LinearLayout
            android:id="@+id/bottom_text_dev"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:gravity="center_vertical|left"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/call_hint"
                android:gravity="center_vertical|left"
                android:text="@string/call_hint"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/call_number"
                android:text="@string/customer_service_number"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/dialog_red"
                android:layout_height="0dip"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/divider"
        android:layout_above="@id/bottom_dev"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/gray" />

    <Button
        android:id="@+id/logoff"
        android:layout_above="@id/divider"
        android:layout_height="50dip"
        android:layout_width="fill_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/logoff"
        android:background="@drawable/btn_blue_bg"
        android:gravity="center" />

</RelativeLayout>
